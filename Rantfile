#!/usr/bin/env ruby

# Rantfile for Rant :)

require 'rant'
require 'rant/rubytest'
require 'rant/rubydoc'

task :default => :test

lib_files = FileList["lib/**/*.rb"]
doc_files = lib_files + FileList["**/*.rdoc"]
rdoc_opts = %w(-S -c UTF-8 --title Rant --main lib/rant.rb)

desc "Generate documentation."
gen RubyDoc do |g|
    g.files.concat FileList["**/*.rdoc"]
    g.opts = rdoc_opts
end

# Just to test Rant.
gen RubyDoc, :rdoc do |g|
    g.verbose = true
    g.files = doc_files
    g.opts = rdoc_opts
end

desc "Run basic tests."
gen RubyTest do |g|
    g.pattern = 'test_*.rb'
end

desc "Run first test-project.",
     "Warning: writes to disc."
gen RubyTest, :testp1 do |g|
    g.test_files = ["test/project1/test_project.rb"]
end

desc "Run second test project.",
     "Warning: writes to disc"
gen RubyTest, :testp2 do |g|
    g.test_files = ["test/project2/test_project.rb"]
end

desc "Test plugins."
gen RubyTest, :testplugins do |g|
    g.test_files = FileList["test/plugin/**/test_*"]
end

desc "Run all tests."
task :testall => %w(test testp1 testp2 testplugins)

desc "Remove autogenerated files."
task :clean do
    rm_rf %w(doc pkg)
end

if $0 == __FILE__
    Rant.run
end
